<%- include('partials/header.ejs');%>

<body>
  <%- include('partials/navbar.ejs');%>
  <div class="container">
    <div class="card border-light mb-3" id="question-form">
      <div class="card-header">
        <h3>Ask something here!</h3>
      </div>
      <div class="card-body">
        <form method="POST" action="/savequestion">
          <label>Title</label>
          <input
            type="text"
            placeholder="Question"
            class="form-control"
            name="title"
          />
          <br />
          <label>Description</label>
          <textarea
            placeholder="Describe more about your question"
            class="form-control"
            name="description"
          ></textarea>
          <br />
          <button class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</body>
<%- include('partials/footer.ejs');%>
